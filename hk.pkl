amends "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Builtins.pkl"

local miscLinters = new Mapping<String, Step> {
    ["json"] = Builtins.jq
    ["yaml"] = Builtins.yamllint
    ["pkl"] {
        glob = "*.pkl"
        check = "pkl eval {{files}} >/dev/null"
    }
}

local lint = new Mapping<String, Step> {
    ["lint:frontend"] {
        dir = "frontend"
        shell = "bun run lint:fix"
    }
    ["lint:auth-new"] {
        dir = "auth-new"
        shell = "make fmt"
    }
    ...miscLinters
}

hooks {
    ["pre-commit"] {
        fix = true
        stash = "git"
        steps {
            ["generate"] {
                shell = "mise run generate"
            }
            ...lint
        }
    }
    // instead of pre-commit, you can instead define pre-push hooks
    ["pre-push"] {
        steps = lint
    }
    // "fix" and "check" are special steps for `hk fix` and `hk check` commands
    ["fix"] {
        fix = true
        steps = lint
    }
    ["check"] {
        steps = lint
    }
}
