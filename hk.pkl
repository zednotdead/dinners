amends "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Builtins.pkl"

local miscLinters = new Mapping<String, Step> {
    ["pkl"] {
        glob = "*.pkl"
        check = "pkl eval {{files}} >/dev/null"
    }
}

local lint = new Mapping<String, Step> {
    ["auth"] {
        dir = "auth"
        fix = "make fmt"
    }
    ["frontend"] {
        dir = "frontend"
        check = "bun run lint"
        fix = "bun run lint:fix"
    }
    ["components"] {
        dir = "components"
        check = "bun run lint"
        fix = "bun run lint:fix"
    }
    ...miscLinters
}

hooks {
    ["pre-commit"] {
        fix = true
        stash = "git"
        steps {
            ["generate"] {
                shell = "mise run gen-openapi"
            }
            ...lint
        }
    }
    ["pre-push"] {
        steps = lint
    }
    ["fix"] {
        fix = true
        steps = lint
    }
    ["check"] {
        steps = lint
    }
}

